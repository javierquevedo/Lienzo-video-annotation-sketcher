<div id="page">
<h1> Listing annotations of clip <%= @clip.name %>
</h1>

<table>
<tr>
  <td>Name</td>
  <td>Author</td>
  <td>Start time</td>
  <td>Duration</td>
</tr>
<% for annotation in @annotations %>
<tr>
  <td><%= annotation.name %>  </td>
  <td><%= annotation.author %>  </td>
  <td><%= annotation.starttime%>  </td>
  <td><%= annotation.duration%>  </td>
  <td><%= link_to 'Show', clip_annotation_path(@clip, annotation) %>  </td>
  <td><%= link_to 'Destroy', [@clip, annotation], :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>
<br />
</div>
<div class="linkBar" >
<table cellpadding="0" cellspacing="0"><tr>
  <td><%= link_to image_tag('backIcon.png', :border=> 0) ,url_for(:back) %></td>
</tr>
</table>
</div>