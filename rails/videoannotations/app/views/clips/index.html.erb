<div id="page">
<table>
  <tr>
    <td><%= image_tag('clipIcon.png') %></td>
    <td><h1> Listing clips for user <%= current_user.login %> </h1></td>
</table>

<table>
  <% for clip in @clips %>
    <tr>
      <td><%= clip.name %></td>
      <td><%= link_to 'Play', clip %></td>
      <td><%= link_to 'Edit annotations', clip_annotations_path(clip) %></td>
       <td><%= link_to 'Destroy', clip, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>

  <% end %>
</table>
<br />
</div>

<div class="linkBar" >
<table cellpadding="0" cellspacing="0"><tr>
  <td><%= link_to image_tag('newClipIcon.png', :border=> 0) , new_clip_path %></td>
</tr>
</table>
</div>